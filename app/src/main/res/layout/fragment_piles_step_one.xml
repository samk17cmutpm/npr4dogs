            android:layout_below="@+id/textView46"
            android:layout_alignLeft="@+id/textView46"
            android:layout_alignStart="@+id/textView46"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/guide.small" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:id="@+id/imageView18"
            android:src="@drawable/ic_doc_10dp"
            android:layout_alignTop="@+id/textView45"
            android:layout_alignLeft="@+id/textView44"
            android:layout_alignStart="@+id/textView44"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="10dp" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:id="@+id/imageView19"
            android:src="@drawable/ic_doc_10dp"
            android:layout_alignLeft="@+id/imageView18"
            android:layout_alignStart="@+id/imageView18"
            android:layout_alignTop="@+id/textView46"
            android:layout_alignRight="@+id/imageView18"
            android:layout_alignEnd="@+id/imageView18"
            android:layout_marginTop="8dp" />



        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:id="@+id/imageView20"
            android:src="@drawable/ic_doc_10dp"
            android:layout_alignTop="@+id/textView47"
            android:layout_alignLeft="@+id/imageView19"
            android:layout_alignStart="@+id/imageView19"
            android:layout_marginTop="8dp" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:id="@+id/imageView21"
            android:src="@drawable/sparkling_poo"
            android:layout_below="@+id/textView47"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp" />

        <com.andexert.library.RippleView
            android:id="@+id/rpv_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            rv_centered="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="60dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp">

            <Button
                android:id="@+id/bt_sign_in"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Next"
                android:textStyle="bold"
                android:layout_below="@+id/view"
                android:layout_centerHorizontal="true"
                android:background="@drawable/sign_in_radius_button" />

        </com.andexert.library.RippleView>
