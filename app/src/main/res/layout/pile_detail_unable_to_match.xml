<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:id="@+id/imageView25"
        android:src="@drawable/pile_unable_to_match"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Pile ID #: 102123"
        android:id="@+id/textView79"
        android:layout_toRightOf="@+id/imageView25"
        android:layout_toEndOf="@+id/imageView25"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:layout_above="@+id/imageView27"
        android:layout_marginBottom="20dp" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView27"
        android:src="@drawable/clock_icon"
        android:layout_alignBottom="@+id/textView81"
        android:layout_alignLeft="@+id/textView79"
        android:layout_alignStart="@+id/textView79" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="02/01/16 3:34pm"
        android:id="@+id/textView80"
        android:layout_alignBottom="@+id/imageView27"
        android:layout_toRightOf="@+id/imageView27"
        android:layout_toEndOf="@+id/imageView27"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="3dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Unable To Match "
        android:id="@+id/textView81"
        android:textColor="@color/red"
        android:layout_alignBottom="@+id/imageView28"
        android:layout_toRightOf="@+id/textView80"
        android:layout_toEndOf="@+id/textView80" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView28"
        android:src="@drawable/pile_example"
        android:layout_below="@+id/imageView25"
        android:layout_alignRight="@+id/linearLayout4"
        android:layout_alignEnd="@+id/linearLayout4" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/black"
        android:layout_marginLeft="50dp"
        android:id="@+id/linearLayout4"></LinearLayout>

</RelativeLayout>
